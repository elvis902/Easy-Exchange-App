<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.easyexchangeapp">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".NotificationManagerFiles.AppClass"
        android:allowBackup="true"
        android:icon="@drawable/new_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/easy_exchange"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyExchangeApp">
        <activity android:name=".Activity.EditProfileActivity"></activity>
        <activity
            android:name=".Activity.SplashScreen"
            android:theme="@style/Theme.Design.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ChatActivity" />
        <activity android:name=".Activity.MyAds" />
        <activity android:name=".Activity.ProductDetails" />
        <activity android:name=".Activity.AddProduct"
            android:theme="@style/Theme.EasyExchangeApp"/>
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity android:name=".Activity.MainActivity"
            android:theme="@style/Theme.EasyExchangeApp"/>
        <activity android:name=".Activity.RegisterActivity" />

        <service
            android:name=".NotificationManagerFiles.NotificationServiceClass"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <receiver android:name=".NotificationManagerFiles.NotificationReceiver" />
    </application>

</manifest>