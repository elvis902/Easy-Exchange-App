<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbgr"
    android:padding="20dp"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100sp"
            android:scaleType="centerCrop"
            android:layout_marginTop="40sp"
            android:layout_marginEnd="100sp"
            android:layout_marginBottom="30sp"
            android:src="@drawable/man_login" />

            <EditText
                android:id="@+id/emailEnt"
                android:layout_width="300sp"
                android:layout_height="45sp"
                android:paddingStart="10sp"
                android:fontFamily="@font/roboto_mono_medium"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circular_textfield"
                android:hint="Email"
                android:textColor="@color/black"
                android:textColorHint="@color/offBlack"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/passwordEnt"
                android:layout_width="300sp"
                android:layout_gravity="center_horizontal"
                android:layout_height="45sp"
                android:layout_marginTop="10sp"
                android:textColorHint="@color/offBlack"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_mono_medium"
                android:paddingStart="10sp"
                android:background="@drawable/circular_textfield"
                android:hint="Password"
                android:inputType="textPassword" />


        <TextView
            android:id="@+id/forgot_password_btn"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="220sp"
            android:layout_marginTop="5sp"
            android:textColor="@color/offBlack"
            android:layout_marginEnd="10sp"
            android:text="Forgot Password?" />

        <android.widget.Button
            android:id="@+id/login_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="@color/magenta_0"
            android:text="LOGIN"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="#FDFDFD" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="60dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="130dp"
                android:text="Don't have an account?"
                android:textAlignment="center"
                android:textColor="@color/offBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/not_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="245dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="5dp"
                android:text="Register"
                android:textAlignment="center"
                android:textColor="@color/magenta_0"
                android:textSize="16sp" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or Connect with"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/offBlack"/>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->
<!--            -->
<!--            -->
<!--        </LinearLayout>-->

    </LinearLayout>


</RelativeLayout>
