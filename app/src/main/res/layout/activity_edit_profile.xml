<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="136dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/man_signup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhoto" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <EditText
            android:id="@+id/editName"
            android:layout_width="252dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_textfield"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Edit Name"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="252dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_textfield"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Edit Email ID"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="252dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_textfield"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="@string/edit_phone_number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editAddr"
            android:layout_width="252dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_textfield"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="@string/edit_address"
            android:padding="10dp"
            android:autofillHints="" />

    </LinearLayout>

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/magenta_0"
        android:fontFamily="@font/montserrat_semibold"
        android:text="@string/done"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.355" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>