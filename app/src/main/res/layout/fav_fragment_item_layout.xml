<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:layout_marginStart="18dp"
    android:layout_marginTop="9dp"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="9dp"
    android:background="@drawable/mydrop_shadow"
    android:elevation="13dp"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:id="@+id/favFrag_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/mydrop_shadow"
        card_view:cardCornerRadius="13dp">

        <ImageView
            android:id="@+id/favFrag_itemImage"
            android:layout_width="114dp"
            android:layout_height="112dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/mydrop_shadow"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/todo"
            android:elevation="13dp"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/favFrag_itemPrice"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginStart="138dp"
                    android:layout_marginTop="17dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Price"
                    android:maxEms="100"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="22sp" />


                <ImageView
                    android:id="@+id/favFrag_nextButton"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="17dp"
                    android:clickable="true"
                    android:src="@drawable/arrow" />

            </LinearLayout>


            <TextView
                android:id="@+id/favFrag_itemDescription"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="138dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_medium"
                android:maxEms="200"
                android:maxLines="1"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="23dp"
                    android:layout_marginLeft="138dp"
                    android:layout_marginTop="1dp"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/placeholder" />

                <TextView
                    android:id="@+id/favFrag_itemAddress"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_light"
                    android:maxEms="200"
                    android:maxLines="1"
                    android:text="Hostel 9B NIT Silchar"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/favFrag_deleteBookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="1dp"
                    android:clickable="true"
                    android:contentDescription="@string/todo"
                    android:src="@drawable/ic_round_delete_24" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

